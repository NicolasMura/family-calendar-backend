{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "es6",
    "noImplicitAny": true,
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "lib": [ "es2015" ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
